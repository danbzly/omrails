
<div class="page-header">

<div class="dropdown">
  <h1>All Statuses
  <a class="dropdown-toggle btn btn-info" data-toggle="dropdown" href="#">Post A Status</a>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
   <%= render 'toggle_form' %></h1>
  </ul>
</div>
</div>


<% @statuses.each do |status| %>
  
  <div class="status">
    <div class="row-fluid">
      
     <div class="span1">
           <%= link_to image_tag(status.user.gravatar_url), user_path(status.user) %>
     </div>
    <div class="span7">
      <strong><%= status.user.try(:first_name) %> (<%= status.user.try(:biz_name) %>)</strong>
      <p><%= status.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
      <span class="admin">
        <% if current_user == status.user %>
      | <%= link_to 'Edit', edit_status_path(status) %> |
      <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
    <% end %>
    </div>
  </div>
 </div>
</div>

<% end %>



