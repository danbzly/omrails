<div class="row">
  <div class="span6 offset3">
   <div class="well">

<h2>Sign up</h2>



<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>


  <%= f.input :first_name, placeholder: 'What IS your name?' %>
  <%= f.input :last_name, placeholder: 'and your last?' %>
  <%= f.input :biz_name, label: "Business Name", placeholder: 'Business Name'%>
  <%= f.input :email, placeholder: 'user@domain.com' %>
  <%= f.input :password, placeholder: '***********' %>
  <%= f.input :password_confirmation, placeholder: '***********' %>
  

  <div class="form-actions">
  	<%= f.submit "Sign up", class: "btn btn-primary btn-large" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>



  </div>
</div>
</div>